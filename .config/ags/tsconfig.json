{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "typeRoots": [
            "@girs"
        ],
        "experimentalDecorators": true,
        "strict": true,
        "target": "ES2023",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "/usr/share/astal/gjs/gtk3",
        "paths": {
            "astal": [
                "/usr/share/astal/gjs"
            ],
            "astal/*": [
                "/usr/share/astal/gjs/*"
            ]
        }
    }
}
